#!/usr/bin/env bash

bin=$$(dirname $${BASH_SOURCE[0]})
bin=$$(cd "$$bin"; pwd)

. "$$bin"/guniflask-example-config.sh

gconf="$$${PROJECT_NAME}_CONF_DIR"/startup.py

echo "debug ${project_name}"

export ${PROJECT_NAME}_DEBUG=1
cd "$$${PROJECT_NAME}_HOME"
gunicorn -c "$$gconf" "${project_name}.app:create_app()" $$@
cd - > /dev/null
