#!/usr/bin/env bash

bin=$(dirname ${BASH_SOURCE[0]})
bin=$(cd "$bin"; pwd)

. "$bin"/{{project__name}}-config.sh

gconf="$GUNIFLASK_CONF_DIR"/startup.py

echo "debug {{project_name}}"

export GUNIFLASK_DEBUG=1
cd "$GUNIFLASK_HOME"
gunicorn -c "$gconf" "{{project_name}}.app:create_app()" $@
cd - > /dev/null
